    },
    "authorCover": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "articleSummary": {
      "type": "string"
    }
  }
}
