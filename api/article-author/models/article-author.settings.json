{
  "kind": "collectionType",
  "collectionName": "article_authors",
  "info": {
    "name": "Article author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "author": {
      "type": "string"
    },
    "articles": {
      "collection": "article",
